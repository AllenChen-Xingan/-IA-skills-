{
  "permissions": {
    "allow": [
      "Bash(pip show:*)",
      "Bash(python convert_docs_to_md.py:*)",
      "Bash(where:*)",
      "Bash(python:*)",
      "Bash(find:*)",
      "Skill(tutorial-extractor)",
      "Skill(skill-creator)",
      "WebSearch",
      "Skill(-ia-skill-creater)",
      "Bash(dir:*)",
      "Bash(git remote add:*)",
      "Bash(npx tsc)",
      "Bash(npm install:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git push:*)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/git-auto-tag-v2/dist/hook.js",
            "timeout": 30000
          }
        ]
      }
    ]
  }
}
